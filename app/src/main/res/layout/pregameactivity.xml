<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_light"
    android:weightSum="12">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/X"
            style="@style/PreGameButton"
            android:layout_marginEnd="20dp"
            android:gravity="center"
            android:fontFamily="@font/product_sans_bold"
            android:text="@string/figureX" />

        <Button style="@style/PreGameButton"
            android:id="@+id/O"
            android:gravity="center"
            android:fontFamily="@font/product_sans_bold"
            android:text="@string/figureO" />
    </LinearLayout>

    <TextView
        android:id="@+id/textViewDifficulty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/Computer"
        android:textAllCaps="true"
        android:textColor="@color/text_color"
        android:fontFamily="@font/product_sans_bold"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:layout_gravity="center"
        android:orientation="vertical">

        <Button style="@style/Button"
            android:id="@+id/ComputerNone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/ComputerNone" />

        <Button style="@style/Button"
            android:id="@+id/ComputerRandom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/ComputerRandom" />

        <Button style="@style/Button"
            android:id="@+id/ComputerLogic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/ComputerLogic" />

        <Button style="@style/Button"
            android:id="@+id/ComputerMinMax"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:clickable="false"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/ComputerMinMax" />

        <Button style="@style/Button"
            android:id="@+id/ComputerBigData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/ComputerBigData" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="2"
        android:layout_gravity="top|center_horizontal">

        <Button style="@style/Button"
            android:id="@+id/startGame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/startGame" />
    </LinearLayout>
</LinearLayout>